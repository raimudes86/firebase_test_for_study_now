<h1>ユーザー登録</h1>

<%= form_with model: @user, url: users_path, data: { controller: 'signup', action: "submit->signup#register" } do |f| %>
  <div class="field">
    <%= f.label :email, 'メールアドレス' %>
    <%= f.email_field :email, class: 'form-control', data: { signup_target: "email" } %>
  </div>

  <div class="field">
    <%= f.label :password, 'パスワード' %>
    <%= f.password_field :password, class: 'form-control', data: { signup_target: "password" } %>
  </div>

  <%= f.submit '登録', class: 'btn btn-primary' %>
<% end %>
